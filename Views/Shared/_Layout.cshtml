<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Musika Marketplace</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-…" crossorigin="anonymous" />

    <style>
        /* overall page */
        body {
            background-color: #121212;
            color: #e0e0e0;
        }

        /* navbar & footer */
        .navbar, .footer {
            background-color: #1f1f1f;
        }

            .navbar-brand, .nav-link, .footer .text-muted {
                color: #ccc;
            }

                .nav-link.active, .navbar-brand:hover, .nav-link:hover {
                    color: #81d4fa;
                }

        /* cards (Search & Metadata Tester) */
        .card {
            background-color: #1e1e1e !important;
            border: 1px solid #333 !important;
            color: #e0e0e0;
        }

            .card .card-title {
                color: #fff;
            }

            .card .card-text {
                color: #bbb;
            }

            .card .btn-primary {
                background-color: #1565c0;
                border-color: #1565c0;
            }

                .card .btn-primary:hover {
                    background-color: #1e88e5;
                    border-color: #1e88e5;
                }

            .card .btn-success {
                background-color: #2e7d32;
                border-color: #2e7d32;
            }

                .card .btn-success:hover {
                    background-color: #388e3c;
                    border-color: #388e3c;
                }

        /* JSON output box */
        pre {
            background-color: #272727;
            color: #f0f0f0;
            padding: 1rem;
            border: 1px solid #444;
            border-radius: 4px;
            font-size: 0.9rem;
            overflow-x: auto;
        }

        /* input/button under JSON view */
        input[type=number] {
            background-color: #1f1f1f;
            border: 1px solid #444;
            color: #e0e0e0;
        }

            input[type=number]::placeholder {
                color: #777;
            }

        button {
            background-color: #1565c0;
            border-color: #1565c0;
            color: #fff;
        }

            button:hover {
                background-color: #1e88e5;
                border-color: #1e88e5;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Musika</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Meta">Metadata Test</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer py-3 text-center">
        <div class="container">
            <span class="text-muted">MVP Build for Solana Hackathon · Version 0.1</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-…" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-…" crossorigin="anonymous">
    </script>

    @* Allow views to inject page-specific scripts *@
    @RenderSection("Scripts", required: false)
</body>
</html>

